@model Portfolio.ViewModels.AboutMeViewModel
@{
    ViewBag.Title = "AboutMe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <section class="Me">
        <div class="left">
            <img src="@Url.Content("~/Content/Images/")" style="width: 100%; height: 400px;border-radius: 100%;border: 2px solid gray; box-shadow:0 0 1em gray;" />
        </div>

        <div class="right">
            <div id="gray">
                @foreach (var person in Model.People)
                {
                    <h5 class="headers">Personal</h5>
                    <hr />
                    <ul>
                        <li>
                            @person.Name @person.Lastname
                        </li>
                        @foreach (var school in Model.Education)
                        {
                            <li>
                                @school.Name
                            </li>
                        }
                    </ul>

                    <h2 class="headers">Hobby</h2>
                    <hr />
                    <ul>
                        @foreach (var hobby in Model.Hobbies)
                        {
                            <li>
                                @hobby.Name
                            </li>
                        }
                        <li>
                            Volleyball
                        </li>
                        <li>
                            Manual works with computer, especially mine :)
                        </li>
                    </ul>

                    <h2 class="headers">General</h2>
                    <hr />
                    <p class="text">
                        @person.GeneralInfo
                    </p>

                    <h2 class="headers">Technologies</h2>
                    <hr />
                    @foreach (var tech in Model.PersonTechnologies)
                    {
                        <span class="tech">
                            @tech.Name
                        </span>
                    }
                }
            </div>
        </div>
    </section>

    <div id="gray">
        <br />
        <nav class="refs">
            <ul>
                <li>
                    <a href="https://github.com/dgaweda" class="reference" target="_blank">GitHub</a>
                </li>
                <li>
                    <a href="https://www.facebook.com/darek.gaweda/" class="reference">Facebook</a>
                </li>
                <li>
                    <a href="https://drive.google.com/file/d/14K25J_YR5aW6FKCtyH74_Fekh43tVynQ/view?usp=sharing" target="_blank" class="reference">My CV</a>
                </li>
                <li>
                    <a href="https://www.youtube.com/user/MiroslawZelent" class="reference" target="_blank">M.Zelent</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

